<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".RegisterActivity" android:gravity="center" android:padding="30dp" android:background="@drawable/activity_background" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="50dp" android:layout_width="wrap_content" android:src="@drawable/logo"/>

    <EditText android:padding="10dp" android:background="@drawable/edittext_background" android:textColorHint="@color/white" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:id="@+id/username" android:hint="Username"/>

    <EditText android:padding="10dp" android:background="@drawable/edittext_background" android:textColorHint="@color/white" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:id="@+id/fullname" android:hint="Full name"/>

    <EditText android:padding="10dp" android:background="@drawable/edittext_background" android:textColorHint="@color/white" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:id="@+id/email" android:hint="Email" android:inputType="textEmailAddress"/>

    <EditText android:padding="10dp" android:background="@drawable/edittext_background" android:textColorHint="@color/white" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:id="@+id/password" android:hint="Password" android:inputType="textPassword"/>

    <Button android:background="@drawable/button_background" android:layout_height="wrap_content" android:layout_width="247dp" android:layout_marginTop="15dp" android:id="@+id/register" android:textColor="@color/white" android:text="register"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="10dp" android:id="@+id/txt_login" android:text="Already have an account? Log in" android:textColor="@color/white"/>

</LinearLayout>